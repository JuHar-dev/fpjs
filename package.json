{
  "name": "funpjs",
  "version": "1.0.0",
  "description": "Basic functional programming concepts for javascript",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.spec.ts --exit",
    "build": "npm run clean && npm run format && tsc -p .",
    "clean": "npx rimraf ./dist",
    "prepublish": "npm run build",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "version": "npm run format && git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "keywords": [
    "functional programming",
    "either",
    "option",
    "unit"
  ],
  "author": "Julian Hartl",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/JuHar-dev/fpjs.git"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.6",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "prettier": "^2.5.1",
    "tslint-config-prettier": "^1.18.0"
  }
}
